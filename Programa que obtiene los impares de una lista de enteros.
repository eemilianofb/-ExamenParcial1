#include <stdio.h>

//Programa que obtiene los impares de una lista de enteros.
int main(){
	int n;
	int numeros = 1;
	char opcion;

	printf("Quieres saber los\033[32m numeros impares\033[0m del 1 al 50?\n");
	printf("\n");  
    
	scanf("%c",&opcion);

    if (opcion == 'S' || opcion == 's' || opcion == 'SI' || opcion == 'si' || opcion == 'Si') {
      
	    printf("\n");  
		printf("Aqui estan todos los\033[32m numeros impares\033[0m del 1 al 50:\n");     
	    while (numeros <= 50) {
            
		if (numeros % 2 != 0) {
        
		printf("\n");        
		printf(" %d,", numeros); 
	
		}numeros++;
}
    	printf("\n \n Estos son tus\033[32m numeros impares\033[0m.");
       
} else {
        printf("No se mostraron\033[32m numeros impares\033[0m.\n");
    }
    return 0;
}
