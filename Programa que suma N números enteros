#include <stdio.h>

//Programa que suma N n√∫meros enteros

int main(){
	int suma;
	int NumeroA, NumeroB;
	
	printf("Ingrese el primer de los \033[32mnumeros\033[0m que quiere sumar \n");
	scanf("%d", &NumeroA);
	
	printf("Ingrese el segundo de los \033[32mnumeros\033[0m que quiere sumar \n");
	scanf("%d", &NumeroB);	

	{
	int suma = (NumeroA + NumeroB);	
	
	printf("La suma de %d + %d = %d  \n ", NumeroA, NumeroB, suma);

	}	
	return 0;
}
