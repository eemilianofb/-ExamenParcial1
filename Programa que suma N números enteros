#include<stdio.h>

//Programa que suma N n√∫meros enteros.

int main(){	
	
	int Numero1;
	int Numero2;
	
	printf("Introduce el \033[32mnumero\033[0m hasta el cual quieres que cuente: \n\n");
	scanf("%d", &Numero1); 
	
	Numero2 =(Numero1*(Numero1+1))/2;
	
	printf("La respuesta de los \033[32mnumeros\033[0m posteriores sumados entre ellos es: \n");
	printf("%d", Numero2);
	
	return 0;
}
